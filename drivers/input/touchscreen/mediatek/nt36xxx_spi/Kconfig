#
# Novatek NT36xxx touchscreen driver configuration
#
config TOUCHSCREEN_NT36XXX_HOSTDL_SPI
	bool "Novatek NT36xxx host download SPI driver"
	depends on SPI
	default n
	help
	  Say Y here if you have a Novatek NT36xxx no flash touchscreen connected
	  to your system by SPI bus.
	  
	  If unsure, say N.

config TOUCHSCREEN_NT36XXX_FW_UPDATE
	bool "Novatek NT36xxx Firmware update SPI driver"
	depends on SPI
	default y
	help
	  Say Y here if you want to use NT36xxx firmware download driver.

config TOUCHSCREEN_NT36XXX_HOSTDL_SPI_C3X
	bool "Novatek NT36xxx host download SPI driver"
	depends on SPI
	default n
	help
	  Say Y here if you have a Novatek NT36xxx no flash touchscreen connected
	  to your system by SPI bus.

	  If unsure, say N.
